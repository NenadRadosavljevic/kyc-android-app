<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#add8e6"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="100px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFirstName"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text=""
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Middle Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMiddleName"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text=""
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Last Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLastName"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text=""
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="50px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Date Of Birth"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:ems="10"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:focusable="false"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="50px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text=""
        android:hint="example@domain.com"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Mobile Number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMobileNumber"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text=""
        android:hint="+1555-555-5555"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="20px"
        android:layout_marginTop="100px"
        android:paddingTop="10px"
        android:paddingBottom="5px"
        android:text="Template Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTemplateName"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="0px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingLeft="30px"
        android:text="General Bio Data"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/my_border_white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pnlMain"
        android:layout_weight="2.73"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:weightSum="1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:background="@android:color/holo_green_light"
            android:weightSum="1.0">
            <TextView
                android:id="@+id/btnBack"

                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:paddingTop="40px"
                android:paddingBottom="40px"
                android:text="@string/Button_Back"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnNext"

                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:paddingTop="40px"
                android:paddingBottom="40px"
                android:text="@string/Button_Next"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>





</LinearLayout>
